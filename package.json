            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "tailwindcss": "^2.2.19",
        "autoprefixer": "^10.0.2",
        "postcss": "^8.0.9"
    },
    "scripts":{
        "built-css": "tailwindcss -i ./assets/css/screen.css -o ./assets/built/screen.css"
    },
    "devDependencies": {
        "tailwindcss": "^2.2.19",
        "autoprefixer": "^10.0.2",
        "postcss": "^8.0.9"
    }
