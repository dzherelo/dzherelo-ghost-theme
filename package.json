{
    "name": "dzherelo",
    "description": "",
    "version": "0.0.1",
    "keywords":[
        "ghost-theme",
        "art"
    ],
    "engines": {
        "ghost": ">=4.0.0",
        "ghost-api": "v4"
    },
    "author": {
        "name": "kosh",
        "email": "dev@dzherelo.one"
    },
    "config": {
        "post_per_page": 3,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
