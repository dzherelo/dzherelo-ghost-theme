{{!< default}}


<h1 class="lg:text-4xl text-3xl uppercase lg:text-center my-10">Тексти</h1>
<div class="grid lg:grid-cols-1 lg:mx-64 grid-cols-1 gap-10 mb-10 mx-0">
{{#foreach posts}}
        <div class="container relative overflow-hidden">
            <a href="{{url}}">
                        <img class="w-full m-0" srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 720w,
                            {{img_url feature_image size="l"}} 960w"
                            sizes="(max-width: 1200px) 100vw, 1200px"
                            src="{{img_url feature_image size="m"}}"
                                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{name}}{{/if}}"
                            >
                        <div class="mt-2">
                            <a class="text-brand-green text-sm uppercase" href="{{primary_tag.url}}">
                                <span>{{primary_tag.name}}</span>
                            </a>
                            <h1 class="text-2xl uppercase">{{title}}</h1>
                            <p class="my-4 text-sm">{{excerpt}}</p>
                            <p class="text-brand-green text-sm uppercase">{{date published_at format="MMMM DD, YYYY"}} – <span class="text-gray-400">{{reading_time minute="ЧИТАТИ ОДНУ ХВИЛИНУ" minutes="ЧИТАТИ % ХВ"}}</span></p>
                        </div>
            </a>
        </div>
{{/foreach}}
</div>

<div class="">
    {{pagination}}
</div>