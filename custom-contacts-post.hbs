{{!< default}}

{{#post}}
<main id="{{slug}}" class="mb-6 mt-4">
    <article id="{{slug}}">
        <h1 class="uppercase lg:text-4xl text-3xl mt-8 mb-8 text-center">{{title}}</h1>
        {{#if feature_image}}
        <div class="lg:mx-56 md:mx-16 sm:mx-0 mx-0 mb-8">
        <img class="h-1/3 w-full" srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 720w,
                    {{img_url feature_image size="l"}} 960w"
                    sizes="800px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    >
        </div>
        {{/if}}
        <section class="gh-content gh-canvas container">
            {{content}}
        </section>
    </article>
</main>
{{/post}}
