{{!< default}}

{{#tag}}
<main>
    <div> 
        <div>
            <img srcset="{{img_url og_image size="s"}} 300w,
                {{img_url og_image size="m"}} 720w,
                {{img_url og_image size="l"}} 960w,
                {{img_url og_image size="xl"}} 1200w,
                {{img_url og_image size="xxl"}} 2000w"
                sizes="(max-width: 1200px) 100vw, 1200px"
                src="{{img_url og_image size="xl"}}"
                alt="{{#if og_image}}{{og_image_alt}}{{else}}{{name}}{{/if}}"
                >
                <h1>{{name}}</h1>
                <span>{{og_description}}</span>
                <p>{{description}}</p>
        </div>
        <div>
            {{!-- {{#get "tag" }} --}}
        </div>
    </div>
</main>
{{/tag}}