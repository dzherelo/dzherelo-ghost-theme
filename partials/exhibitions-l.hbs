{{#get "tags" filter="accent_color: #333333" order="name desc"}}
    {{#if tags}}
    {{!-- Divider --}}
    <div class="mb-5 flex items-center">
        <p class="flex-shrink-0 pr-2 uppercase">Виставки</p>
        <hr class="border-brand-green w-full">
    </div>
    {{!-- End --}}
        <div class="grid lg:grid-cols-2 md:grid-cols-2 sm:grid-cols-1 grid-cols-1 lg:gap-4 gap-10 mb-10 auto-rows-fr">
        {{#foreach tags}}
            <a class="" href="{{url}}">
                <img class="w-full object-cover" srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 720w,
                            {{img_url feature_image size="l"}} 960w"
                            sizes="800px"
                            src="{{img_url feature_image size="m"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{name}}{{/if}}"
                    >
                    <div class="mt-6 text-center">
                        <h1 class="text-3xl uppercase">{{name}}</h1>
                        <p class="text-brand-green mt-1 text-base uppercase">{{meta_description}}</p>
                    </div>
            </a>
        {{/foreach}}
        </div>
    {{/if}}
{{/get}}