{{#get "posts" include="tags" filter="tag:hash-video" limit="4"}}
    <div class="grid grid-cols-1 lg:gap-4 gap-10 mb-10 lg:mx-64 mx-0">
    {{#foreach posts}}
    <div class="">
        <a href="{{url}}">
        <img class="w-full" srcset="{{img_url feature_image size="s"}} 300w,
                {{img_url feature_image size="m"}} 720w,
                {{img_url feature_image size="l"}} 960w"
                sizes="800px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{name}}{{/if}}"
                >
            <div class="mt-2">
                <h1 class="text-3xl uppercase">{{title}}</h1>
                <p class="text-brand-green text-sm uppercase">{{cprimary_tag.name}}</p>
            </div>
        </a>
    </div>
    {{/foreach}}
    </div>
{{/get}}